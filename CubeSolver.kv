<MainLayout>: # BoxLayout
    id: main_layout
    manager: screen_manager
    orientation: 'vertical'
    canvas:
        Color:
            rgba: Gray_light
        Rectangle:
            size: self.size
            pos: self.pos
    ActionBar:
        id: ABar
        pos_hint: {'top':1}
        background_image: 'atlas://resources/images/elements/background_white'
        background_color: Orange
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Action Bar'
                on_press: root.manager.current = 'main'
                with_previous: False
            ActionButton:
                text: 'Historial'
                on_press: root.manager.current = 'historial'
            ActionOverflow:
                overflow_image: 'atlas://resources/images/elements/menu'
#                allow_stretch: False
                # overflow_color: 0,0,0,1
                ActionButton:
                    text: "Clear Times"
                    on_press: root.database.clear() #FIXME database not in root fix reference "root"
                ActionButton:
                    text: "Help"
                ActionButton:
                    text: "About"
    Manager:
        id: screen_manager


<Main>:
    AndroidTabs:
        # Timer
        Timer:
            on_touch_up: self.start()
            on_touch_down: self.stop()
            text: "TIMER"
            orientation: 'vertical'
            padding: 0, 20, 0 , 0
            canvas:
                Color:
                    rgba: Gray_light
                Rectangle:
                    size: self.size
                    pos: self.pos
            Faces:
                size_hint: .9, .05
                pos_hint: {'center_x': .5, 'center_y': 1}
                on_parent: self.draw_face()
                on_touch_down: self.clear_widgets()
                on_touch_up: self.draw_face()

            Label:
                text: self.parent.scramble
                font_name: Primary_font
                font_size: 14
                color: Gray_dark
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: self.size_hint_x, .1

            Label:
                text: self.parent.time_format(self.parent.time)
                font_size: 85
                font_name: Primary_font
                color: Gray_dark
                text_size: self.size
                halign: 'center'
                valign: 'top'
                size_hint: self.size_hint_x, .16
            Image:
                size_hint: .15, .15
                size: self.size
                pos_hint: {'center_x': .5, 'center_y':.5}
                # Para actualizar la imagen por el estado del timer
                source: self.parent.timer_button
